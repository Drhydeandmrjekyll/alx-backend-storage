#!/usr/bin/env python3
"""
// MongoDB Command File
"""

from pymongo import MongoClient

def use_or_create_database(database_name):
    """
    Connect to MongoDB and switch to specified database.
    If database doesn't exist, it will be created.
    """
    try:
        # Connect to MongoDB server
        client = MongoClient()

        # Switch to specified database
        db = client[database_name]

        # Print message indicating switch
        print(f'switched to db {database_name}')

    except Exception as e:
        print(f"Error: {e}")

if __name__ == "__main__":
    use_or_create_database("my_db")
